{
	"background": {
		"color": {
			"value": "#1a1a1a"
		},
		"position": "center"
	},
	"fpsLimit": 75,
	"interactivity": {
		"detectsOn": "window",
		"events": {
			"onClick": {
				"enable": true,
				"mode": "push"
			},
			"onHover": {
				"enable": true,
				"mode": "grab"
			},
			"resize": true
		},
		"modes": {
			"push": {
				"quantity": 1
			},
			"grab": {
				"distance": 200,
				"lineLinked": {
					"opacity": 0.5
				}
			}
		}
	},
	"particles": {
		"color": {
			"value": "#8a8a8a"
		},
		"links": {
			"color": "#6a6a6a",
			"distance": 175,
			"enable": true,
			"opacity": 0.5,
			"width": 1,
			"shadow": {
				"enable": true,
				"blur": 4,
				"color": "#6a6a6a"
			}
		},
		"collisions": {
			"enable": true
		},
		"move": {
			"direction": "none",
			"enable": true,
			"outMode": "bounce",
			"random": false,
			"speed": 0.75,
			"straight": false
		},
		"number": {
			"density": {
				"enable": true,
				"value_area": 800
			},
			"value": 25
		},
		"opacity": {
			"value": {
				"min": 0.1,
				"max": 0.7
			},
			"animation": {
				"enable": true,
				"speed": 1.5,
				"startValue": "min"
			}
		},
		"shape": {
			"type": "circle"
		},
		"size": {
			"random": true,
			"value": 5
		}
	},
	"detectRetina": true
}
