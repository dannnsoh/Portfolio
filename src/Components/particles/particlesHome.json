{
	"background": {
		"color": {
			"value": "#1a1a1a"
		},
		"position": "center"
	},
	"fpsLimit": 60,
	"interactivity": {
		"detectsOn": "window",
		"events": {
			"onClick": {
				"enable": true,
				"mode": "push"
			},
			"onHover": {
				"enable": true,
				"mode": "grab"
			},
			"resize": true
		},
		"modes": {
			"push": {
				"quantity": 1
			},
			"grab": {
				"distance": 200,
				"line_linked": {
					"opacity": 0.25
				}
			}
		}
	},
	"particles": {
		"color": {
			"value": "#fafafa"
		},
		"links": {
			"color": "#fafafa",
			"distance": 150,
			"enable": true,
			"opacity": 0.5,
			"width": 1
		},
		"collisions": {
			"enable": true
		},
		"move": {
			"direction": "none",
			"enable": true,
			"outMode": "bounce",
			"random": false,
			"speed": 1,
			"straight": false
		},
		"number": {
			"density": {
				"enable": true,
				"value_area": 800
			},
			"value": 25
		},
		"opacity": {
			"value": 0.5
		},
		"shape": {
			"type": "circle"
		},
		"size": {
			"random": true,
			"value": 5
		}
	},
	"detectRetina": true
}
